<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/output.css">
</head>
<body>
    <%- include('./components/navbar') %> 
    <main class="mt-20">
        <div class="flex flex-col justify-center w-full items-center">
            <div class="mb-20 text-3xl">
                <a href="/items" class="mr-5">Items</a>
                <a class="bg-blue-500 text-white">Categories</a>
            </div>
            <div class="flex flex-row gap-12 text-lg flex-wrap justify-center">
            <% category.forEach((cat, index) => { %>
                <div class="flex flex-col justify-center items-center">
                    <img src="<%= cat.cat_image %>" alt="Category Image" class="w-14 h-auto shadow-md">
                    <h3>Category: <%= cat.cat_name %></h3>
                    <a href="/category/<%= cat.cat_name %>">View Category <%= cat.cat_name %></a>
                </div>
            <% }) %>
        </div>
    </main>
</body>
</html>